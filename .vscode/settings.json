{
  "prettier.prettierPath": "..node_modules/prettier/index.js",
  // 기본 포맷터 prettier로 사용
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // 파일 저장시 formatter 실행
  "editor.formatOnSave": true,
  "editor.rulers": [120],
  "[javascript]": {
    // 해당 부분이 true 일 경우 저장할 경우 formatting 수행이 됨.
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
